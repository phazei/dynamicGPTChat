<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/stop_and_load_vector">

    <target android:name="loading_ring">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="6400"
                    android:interpolator="@android:interpolator/linear"
                    android:startOffset="@integer/stop_and_go_offset_1"
                    android:repeatCount="infinite"
                    android:repeatMode="restart">
                    <propertyValuesHolder android:propertyName="rotation"
                        android:valueFrom="0"
                        android:valueTo="360"
                        android:valueType="floatType" />
                </objectAnimator>
            </set>
        </aapt:attr>
    </target>
    <target android:name="N">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="@integer/stop_and_go_duration"
                    android:interpolator="@android:interpolator/accelerate_decelerate"
                    android:startOffset="@integer/stop_and_go_offset_1"
                    android:repeatCount="infinite"
                    android:repeatMode="reverse">
                    <propertyValuesHolder android:propertyName="scaleX"
                        android:valueFrom="@dimen/stop_and_go_scale_down"
                        android:valueTo="@dimen/stop_and_go_scale_up"
                        android:valueType="floatType" />
                    <propertyValuesHolder android:propertyName="scaleY"
                        android:valueFrom="@dimen/stop_and_go_scale_down"
                        android:valueTo="@dimen/stop_and_go_scale_up"
                        android:valueType="floatType" />
                </objectAnimator>
            </set>
        </aapt:attr>
    </target>
